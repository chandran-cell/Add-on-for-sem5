package day1;
import java.util.Scanner; 

public class SimpleInterestCalculator {

    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);

        System.out.println("--- Simple Interest Calculator ---");

        
        System.out.print("Enter the Principal amount (P): ");
        double principal = scanner.nextDouble();

       
        System.out.print("Enter the Annual Rate of Interest (R in %): ");
        double rate = scanner.nextDouble();

       
        System.out.print("Enter the Time period (T in years): ");
        double time = scanner.nextDouble();

        
        double simpleInterest = (principal * rate * time) / 100;

        
        System.out.println("\n--- Calculation Result ---");
        System.out.printf("Principal (P): %.2f%n", principal);
        System.out.printf("Rate (R): %.2f%%%n", rate);
        System.out.printf("Time (T): %.2f years%n", time);
        System.out.printf("Simple Interest: %.2f%n", simpleInterest);

       
        scanner.close();
    }
}
