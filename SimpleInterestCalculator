public class SimpleInterestCalculatorFixedInput {

    public static void main(String[] args) {
        // Given input values
        double principal = 1000; // P
        double rate = 5;         // R (in percentage)
        double time = 2;         // T (in years)

        System.out.println("--- Simple Interest Calculation ---");

        // Calculate Simple Interest using the formula: P * R * T / 100
        double simpleInterest = (principal * rate * time) / 100;

        // Display the input values and the calculated result
        System.out.println("Input Details:");
        System.out.printf("Principal (P): %.2f%n", principal);
        System.out.printf("Rate (R): %.2f%%%n", rate);
        System.out.printf("Time (T): %.2f years%n", time);

        System.out.println("\nCalculation Result:");
        System.out.printf("Simple Interest: %.2f%n", simpleInterest);
    }
}

